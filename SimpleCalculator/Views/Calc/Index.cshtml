@model SimpleCalculator.Models.calc
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <body>

        <h2> Simple Calculator</h2>
        <div class="row">
            @using (Html.BeginForm("/Index", "calc", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="number1">Number 1</label>
                    <input type="text" class="form-control" id="number1" name="number1" value="@Model.number1" />
                </div>

                <div class="form-group">
                    <label for="number2">Number 2</label>
                    <input type="text" class="form-control" id="number2" name="number2" value="@Model.number2" />
                </div>

                <div class="form-group">
                    <label for="Totalnumber">Total Number</label>
                    <input type="text" class="form-control" id="Totalnumber" name="Totalnumber" value="@Model.Totalnumber" />
                </div>

                <button type="submit" class="btn btn-info" id="add" value="add" name="claculate">+</button>
                <button type="submit" class="btn btn-danger" id="min" value="min" name="claculate">-</button>
                <button type="submit" class="btn btn-warning" id="mul" value="mul" name="claculate">*</button>
                <button type="submit" class="btn btn-success" id="div" value="div" name="claculate">/</button>
                <button type="submit" class="btn btn-dark" id="cle" value="cle" name="claculate">Clear</button>
            }
        </div>
    </body>
</head>
</html>

